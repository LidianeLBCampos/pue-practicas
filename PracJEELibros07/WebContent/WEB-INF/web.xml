<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>PracJEELibros07</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/WEB-INF/vistas/Error.jsp</location>
  </error-page>
  <context-param>
    <param-name>log4jFileName</param-name>
    <param-value>/WEB-INF/log4jConfig.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.pracjeelibros.StartupListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>formNuevoLibro</servlet-name>
    <jsp-file>/WEB-INF/vistas/FormAltaLibro.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>formNuevoLibro</servlet-name>
    <url-pattern>/formAddBook</url-pattern>
  </servlet-mapping>
