  </servlet-mapping-->
  <servlet>
    <servlet-name>mostrarLibros</servlet-name>
    <jsp-file>/WEB-INF/vistas/MostrarLibros.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>mostrarLibros</servlet-name>
    <url-pattern>/showBooks</url-pattern>
  </servlet-mapping>
